/dts-v1/;
/plugin/;

/{
compatible = "brcm,bcm2835", "brcm,bcm2708";


        fragment@0 {
                target = <&spi0_pins>;
                __overlay__ {
                        brcm,pins = <>;
                        brcm,function = <4>;
                };
        };


	fragment@1 {
                target = <&spi0_cs_pins>;
                frag1: __overlay__ {
                        brcm,pins = <8>;
                        brcm,function = <6>; /* fake ALT2 for SPI CS */
                };
        };


	fragment@2 {
		target = <&fb>;
		__overlay__ {
			pinctrl-names = "default";
			pinctrl-0 = <&dpi18_pins>;
		};
	};

	fragment@3 {
		target = <&vc4>;
		__overlay__ {
			pinctrl-names = "default";
			pinctrl-0 = <&dpi18_pins>;
		};
	};


	fragment@4 {
                target = <&gpio>;
                __overlay__ {
                        cyc8c2_pins: cyc8c2_pins {
                                brcm,pins = <26>; // interrupt
                                brcm,function = <0>; // in
                                brcm,pull = <0>; // pull-down
                        };
                };
        };


	fragment@5 {
        target = <&i2c2>;

        __overlay__ {
            #address-cells = <1>;
            #size-cells = <0>;
            status = "okay";
            cyc8c2: cyc8c2@5c {
                compatible = "cyc8c2";
                reg = <0x5c>;
                pinctrl-names = "default";
                pinctrl-0 = <&cyc8c2_pins>;
                interrupt-parent = <&gpio>;
                interrupts = <26 2>;
		sensivity = <0x20>;
                irq-gpios = <&gpio 26 0>;
                #clk-gpio = <&gpio 2 0>;
                #mosi-gpio = <&gpio 18 0>;
                #cs-gpio = <&gpio 19 0>;
                touchscreen-inverted-x;
                touchscreen-inverted-y;


            };
        };
    };





   fragment@6 {
        target = <&spidev0>;
        __overlay__ {
            status = "disabled";
         };
    };

   fragment@7 {
        target = <&spidev1>;
        __overlay__ {
            status = "disabled";
        };
    };

   fragment@8 {
        target = <&i2c2>;
        __overlay__ {
            status = "okay";
        };
    };


   fragment@9 {
		target = <&spi0>;
		__overlay__ {
			/* needed to avoid dtc warning */
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";
			cs-gpios = <>;
			ws2812@0{
				compatible = "ws2812";
				reg = <0>;
                                spi-max-frequency = <125000000>;
				num-leds = <1>;
				color-order= "GRB"; 
				is-zero-lite = <1>;
				#address-cells = <1>;
	                        #size-cells = <0>;

			};
		};



	};

       fragment@10 {
                target = <&gpio>;
                __overlay__ {

                        dpi18_pins: dpi18_pins {
                                brcm,pins = <0 1 2 3 4 5 6 7 9
                                             12 13 14 15 16 17 20
                                             21 22 23 24 25>; /* no 10, 19, 27 */
                                brcm,function = <6>; /* alt2 */
                                brcm,pull = <0>; /* no pull */
                        };


                };
        };



     fragment@11 {
                target = <&gpio>;
                __overlay__ {
                        pwm_pins: pwm_pins {
                                brcm,pins = <19>;
                                brcm,function = <2>;//alt5 to select PWM01
                        };
                };
        };


        fragment@12 {
                target = <&pwm>;
                frag12: __overlay__ {
                        pinctrl-names = "default";
                        pinctrl-0 = <&pwm_pins>;
                        assigned-clock-rates = <1000000>;
                        status = "okay";
                };
        };

        fragment@13 {
                target-path = "/";
                __overlay__ {
                        zero_lite_backlight: zero_lite_backlight {
                                compatible = "lite-backlight";
                                max-brightness = <4095>;
                                default-brightness-level = <2048>;
                                pwms = <&pwm 1 5000000>;
                                power-supply = <&vdd_3v3_reg>;
                                status = "okay";
                        };
                };
        };


    fragment@14 {
        target = <&i2c2>;
        __overlay__ {
            #address-cells = <1>;
            #size-cells = <0>;
            status = "okay";
            mlx90615@5b {
                compatible = "mlx90615";
                reg = <0x5b>;
            };
        };
    };

    fragment@15 {
        target = <&i2c2>;
        __overlay__ {
            #address-cells = <1>;
            #size-cells = <0>;
            status = "okay";
            bh1750@23 {
                compatible = "bh1750";
                reg = <0x23>;

            };
        };
    };

    fragment@16 {
        target = <&i2c2>;
        __overlay__ {
            #address-cells = <1>;
            #size-cells = <0>;
            status = "okay";
            aht10@38 {
                compatible = "aht10";
                reg = <0x38>;

            };
        };
    };





        fragment@20 {
                // Configure the gpio pin controller
                target = <&gpio>;
                __overlay__ {
                        pin_state: motion_pins {
                                brcm,pins = <10>; // gpio number
                                brcm,function = <0>; // 0 = input, 1 = output
                                brcm,pull = <1>; // 0 = none, 1 = pull down, 2 = pull up
                        };
                };
        };
        fragment@21 {
                target-path = "/";
                __overlay__ {
                        motion: motion {
                                compatible = "gpio-keys";
                                pinctrl-names = "default";
                                pinctrl-0 = <&pin_state>;
                                status = "okay";
                                autorepeat;

                                key: key {
                                        linux,code = <132>;
                                        gpios = <&gpio 10 0>;
                                        label = "MOTION_1";
                                };
                        };
                };
        };



        __overrides__ {
                pin   = <&pwm_pins>,"brcm,pins:0";
                func  = <&pwm_pins>,"brcm,function:0";
                clock = <&frag12>,"clock-frequency:0";
        };




};
